    "@stripe/stripe-js": "^7.3.0",
    "@tanstack/react-query": "^5.71.0",
    "@tanstack/react-query-devtools": "^5.71.0",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.2",
    "drizzle-orm": "^0.38.1",
    "drizzle-zod": "^0.6.0",
    "holy-loader": "^2.3.13",
